{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@simple-auth/express": ["libs/express/src/index.ts"],
      "@boilerplate/fastify": ["libs/fastify/src/index.ts"],
      "@boilerplate/koa": ["libs/koa/src/index.ts"],
      "@boilerplate/react": ["libs/react/src/index.ts"],
      "@boilerplate/vue": ["libs/vue/src/index.ts"],
      "@simple-auth/core": ["libs/core/src/index.ts"],
      "@simple-auth/nestjs": ["libs/nestjs/src/index.ts"],
      "@simple-auth/types": ["libs/types/src/index.ts"],
      "@simple-auth/web": ["libs/web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
